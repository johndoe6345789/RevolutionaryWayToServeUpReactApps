{
  "pre-commit": [
    "#!/bin/sh",
    "# Pre-commit hook template",
    "# Runs before commits to validate code quality",
    "",
    "echo \"Running pre-commit checks...\"",
    "",
    "# Add your pre-commit checks here",
    "# Example: Run linting",
    "if command -v bun >/dev/null 2>&1; then",
    "    if ! bun run lint.ts; then",
    "        echo \"Lint checks failed. Please fix critical errors before committing.\"",
    "        exit 1",
    "    fi",
    "else",
    "    echo \"Warning: bun not found, skipping lint checks\"",
    "fi",
    "",
    "# Add whitespace check",
    "git diff-index --check --cached HEAD --"
  ],
  "commit-msg": [
    "#!/bin/sh",
    "# Commit message validation hook template",
    "",
    "commit_msg_file=$1",
    "",
    "# Read commit message",
    "commit_msg=$(cat $commit_msg_file)",
    "",
    "# Example: Check for minimum length",
    "commit_msg_length=$(echo -n \"$commit_msg\" | wc -c)",
    "if [ \"$commit_msg_length\" -lt 10 ]; then",
    "    echo \"Commit message too short (minimum 10 characters)\"",
    "    exit 1",
    "fi",
    "",
    "# Example: Check for conventional commit format",
    "if ! echo \"$commit_msg\" | grep -qE \"^(feat|fix|docs|style|refactor|test|chore): \"; then",
    "    echo \"Commit message should follow conventional commit format\"",
    "    echo \"Example: feat: add new feature\"",
    "    exit 1",
    "fi"
  ],
  "pre-push": [
    "#!/bin/sh",
    "# Pre-push hook template",
    "# Runs before pushes to validate changes",
    "",
    "echo \"Running pre-push checks...\"",
    "",
    "# Add your pre-push checks here",
    "# Example: Run tests",
    "if command -v bun >/dev/null 2>&1; then",
    "    if ! bun test; then",
    "        echo \"Tests failed. Please fix issues before pushing.\"",
    "        exit 1",
    "    fi",
    "else",
    "    echo \"Warning: bun not found, skipping tests\"",
    "fi"
  ]
}
