{
  "name": "revolutionary-codegen",
  "version": "1.0.0",
  "description": "AGENTS.md compliant codegen platform - spec-driven, plugin-based development",
  "main": "codegen.js",
  "type": "module",
  "scripts": {
    "lint": "node scripts/lint.js",
    "lint:fix": "bunx eslint . --ext .ts,.tsx,.js,.jsx --fix && bunx prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "bunx tsc --noEmit",
    "build": "npm run lint && bun run build.ts",
    "prebuild": "npm run lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "bunx prettier --write .",
    "format:check": "bunx prettier --check .",
    "codegen": "bun run codegen.js",
    "generate-bootstrap": "bun run scripts/generate-bootstrap.ts",
    "dev": "bun run dev.ts",
    "clean": "bun run clean.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^4.0.16",
    "bun-types": "latest",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "yaml": "^2.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "codegen",
    "agile",
    "plugin",
    "spec-driven",
    "oop"
  ],
  "author": "Codegen Team",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@monaco-editor/react": "^4.7.0",
    "@mui/icons-material": "^7.3.6",
    "@mui/lab": "^7.0.1-beta.20",
    "@mui/material": "^7.3.6",
    "@mui/x-tree-view": "^8.22.0",
    "bun": "^1.3.5"
  }
}
